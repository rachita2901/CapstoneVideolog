<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Capstone Project</title>
  </head>

  <body>

    

    <h1>Welcome</h1>
    <h2>Enter your quote </h2>

    <form action="/quotes" method="POST">
      <input type="text" placeholder="Name" name="name" />
      <input type="text" placeholder="Quote" name="quote" />
      <button type="submit">Submit</button>
    </form>

    <section data-position="update-quote">
      <div>
        <h2>Update!</h2>
        <p>
          Replace quote by test2
        </p>
        <button id="update-button">Replace quote</button>
      </div>
    </section>  

    <section data-position="delete-quote">
        <div>
          <h2>Remove!</h2>
          <p>
           Delete a quote
          </p>
          <button id="delete-button">Delete quote</button>
        </div>
        <div id="message"></div>
      </section>
      

    <h2> Quotes Listed </h2>

    <ul class="quotes">
      <!-- Loop through quotes -->
      <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quotes">
          <!-- Output name from the iterated quote object -->
          <span><%= quotes[i].name %></span>:
          <!-- Output quote from the iterated quote object -->
          <span><%= quotes[i].quote %></span>
        </li>
      <% } %>
    </ul>
    <script src="/main.js"></script>
  </body>
</html>